<h3>学習記録の編集</h3>
<%= form_tag("/days/" + @days.id.to_s,:method=>:patch) do %>
  <div class="form-group">
    <%= label_tag "form-title","タイトル:" %>
    <%= text_field :days, :title, id:"form-title", class:"form-control",value:@days.title %>
  </div>
  <div class="form-group">
    <%= label_tag "form-body","内容:" %>
    <%= text_area :days, :body, id:"form-body", class:"form-control", value: @days.body %>
  </div>
  <%= submit_tag "更新", class:"btn btn-primary btn-lg" %>
<% end %>
